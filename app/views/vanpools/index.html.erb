<h1>All Vanpools:</h1>

<%= form_tag vanpools_join_path, :class => 'form' do %>
  <table class="table table-striped col-md-12">
    <tbody>
    <% @vanpools.each do |v| %>
      <tr>
        <td>
          <% if @current_user %>
            <%=check_box_tag "vanpools[#{v[:id]}]" %>
          <% end %>
          <%= v.serializable_hash%>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  </br>
  <% if @current_user %>
    <%= submit_tag 'Join Vanpool', :class => 'btn btn-primary'%>
  <% end %>
<% end %>
<%= link_to "Go Back", pages_welcome_path %>
