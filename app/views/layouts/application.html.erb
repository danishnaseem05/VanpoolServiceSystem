<!DOCTYPE html>
<html>
  <head>
    <title>VanpoolServiceSystem</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
  </header>
  <%= console %>
  <div>
    <% if !(@current_user) %>
      <%= button_to('Sign up/Login', login_path, method: :get, :id => 'signupLogin') %>
      <%= button_to('Forgot Password', login_path, method: :get) %>
      <%= button_to('Home', root_path, method: :get) %>
    <% elsif @current_user %>
      <p>You are logged in as <%="#{@current_user.user_id}, with a vanpools_id: #{@current_user.rider_vanpool_ids}"%></p>
      <%= button_to('Logout', logout_path, method: :delete, :id => 'logout') %>
      <%= button_to("Home", pages_welcome_path, method: :get) %>
    <% end %>
  </div>
  <br/>

  <section>
    <div id="flash">
      <% flash.each do |key, value| %>
        <div class="flash <%= key %>"><%= value %></div>
      <% end %>
    </div>
  <%= yield %>
  </section>
  </body>
</html>
