<h2>Sign-up</h2>

<%= form_tag users_path, :class => 'form' do %>
  <%= label :user, :user_id, 'User-ID', :class => 'col-form-label' %>
  <%= text_field :user, 'user_id', :class => 'form-control', :id => 'signupUser' %>
  <%= label :user, :email, 'E-Mail', :class => 'col-form-label'  %>
  <%= text_field :user, 'email', :class => 'form-control col-1', :id => 'signupEmail' %>
  <%= label :user, :password, 'Password', :class => 'col-form-label'  %>
  <%= text_field :user, 'password', :class => 'form-control col-1', :id => 'signupPassword' %>
  <br/>
  <%= submit_tag 'Create my account', :class => 'btn btn-primary', :id => 'signupCreate' %>
<% end %>
